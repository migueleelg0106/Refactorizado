
<Window x:Class="PictionaryMusicalCliente.ExpulsionJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.expulsarJugadorTextoTitulo}"
        Height="220" Width="330"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        ShowInTaskbar="False">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel MinWidth="280" MaxWidth="300">
                <TextBlock Text="{x:Static language:Lang.expulsarJugadorTextoTitulo}"
                           FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,12"/>

                <TextBlock Text="{Binding MensajeConfirmacion}"
                           FontFamily="Comic Sans MS" FontSize="14"
                           TextAlignment="Center" TextWrapping="Wrap"
                           Margin="0,0,0,24"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="botonExpulsarJugador"
                            Grid.Column="0" Height="40" Margin="0,0,6,0"
                            Content="{x:Static language:Lang.expulsarJugadorTextoConfirmar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Foreground="Red"
                            Background="White" BorderBrush="Black"
                            Command="{Binding ConfirmarComando}"/>

                    <Button x:Name="botonCancelarExpulsion"
                            Grid.Column="1" Height="40" Margin="6,0,0,0"
                            Content="{x:Static language:Lang.expulsarJugadorTextoCancelar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding CancelarComando}" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
