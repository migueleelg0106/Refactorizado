<Window x:Class="PictionaryMusicalCliente.BuscarAmigo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        xmlns:convertidores="clr-namespace:PictionaryMusicalCliente.Convertidores"
        xmlns:utilidades="clr-namespace:PictionaryMusicalCliente.Utilidades"
        Title="{x:Static language:Lang.globalTextoBuscarAmigo}" Height="250" Width="450"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Window.Resources>
        <convertidores:ConvertidorBooleanoInverso x:Key="BooleanoInverso"/>
    </Window.Resources>
    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.globalTextoBuscarAmigo}" FontFamily="Comic Sans MS" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{x:Static language:Lang.buscarAmigoTextoIngreseUsuario}" FontFamily="Comic Sans MS" FontSize="14" Margin="0,15,0,5"/>
                <TextBox x:Name="bloqueTextoUsuario"
                         Height="30" FontFamily="Comic Sans MS"
                         MaxLength="{x:Static utilidades:ConstantesUi.LongitudMaximaNombreUsuario}"
                         Text="{Binding NombreUsuario, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding EstaProcesando, Converter={StaticResource BooleanoInverso}}"/>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{x:Static language:Lang.buscarAmigoTextoEnviaSolicitud}"
                            Margin="0,0,5,0" Height="40" FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding EnviarSolicitudCommand}"/>
                    <Button Grid.Column="1" Content="{x:Static language:Lang.globalTextoCancelar}"
                            Margin="5,0,0,0" Height="40" FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black" HorizontalAlignment="Left" Width="76"
                            Command="{Binding CancelarCommand}"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
